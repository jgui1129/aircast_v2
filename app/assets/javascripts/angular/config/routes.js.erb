Aircast.config(["$stateProvider", "$httpProvider", "$urlRouterProvider", "$locationProvider", function($stateProvider, $httpProvider, $urlRouterProvider, $locationProvider) {
  $stateProvider
    .state('nav', {
        abstract: true,
        templateUrl: 'shared/nav.html',
        controller: 'NavController'
    })

    .state('nav.home', {
      url: '/',
      views: {
        'content@nav': {
          templateUrl: 'main/home.html',
          controller: 'HomeController'
        }
      }
    })

    .state('login', {
      url: '/login',
      templateUrl: 'main/login.html',
      controller: 'UserController'
    })

    .state('register', {
      url: '/register',
      templateUrl: 'main/register.html',
      controller: 'UserController'
    })


    .state('nav.settings', {
      url: '/settings',
      views: {
        'content@nav': {
          templateUrl: 'main/settings.html',
          controller: 'SettingsController'
        }
      }
    })

    .state('nav.edit', {
      url: '/edit?campaignID',
      views: {
        'content@nav': {
          templateUrl: 'main/edit.html',
          controller: 'EditController'
        }
      }
    })

    .state('nav.campaigns', {
      url: '/campaigns',
      abstract: true,
      views: {
        'content@nav': {
          templateUrl: 'main/campaign.html',
        }
      }
    })


    .state('nav.campaigns.upload', {
      url: '/upload',
      views: {
        'subcontent': {
          templateUrl: 'main/upload.html',
          controller: 'CampaignController'
        }
      }
    })

    .state('nav.campaigns.social', {
      url: '/social',
      views: {
        'subcontent': {
          templateUrl: 'main/social.html',
          controller: 'CampaignController'
        }
      }
    })

    .state('nav.locations', {
      url: '/locations',
      views: {
        'content@nav': {
          templateUrl: 'main/locations.html',
          controller: 'LocationController'
        }
      }
    })

    .state('nav.locationdetail', {
       url: '/locations/:id',
       views: {
        'content@nav': {
          templateUrl: 'main/locations.html',
          controller: 'LocationController'
        }
       } 
    })


    $urlRouterProvider.otherwise('/');
    $locationProvider.html5Mode({
  enabled: true,
  requireBase: false
})

}])
.run(["$rootScope", "$state", function($rootScope, $state) {
      $rootScope.$state = $state;
}])
